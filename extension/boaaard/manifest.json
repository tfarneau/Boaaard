{
  "name": "Boaaard",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "This extension helps you to easily create a board from a youtube URL",
  "homepage_url": "http://www.boaaard.me",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "default_locale": "en",
  "background": {
    "page": "src/bg/background.html",
    "persistent": true
  },
  "browser_action": {
    "default_icon": "icons/icon19.png",
    "default_title": "help action",
    "default_popup": "src/browser_action/browser_action.html"
  },
  "permissions": [
    "tabs"
  ]
}